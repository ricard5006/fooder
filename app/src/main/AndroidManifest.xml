<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ricardo.fooder">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="false"
        android:icon="@mipmap/logofooder"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logofooder_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Fooder"
        android:requestLegacyExternalStorage="true">
        <activity android:name=".reporteByItems"
            tools:ignore="LockedOrientationActivity"/>
        <activity android:name=".splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".configuracion"
            tools:ignore="LockedOrientationActivity"/>
        <activity
            android:name=".dialogos.dialogVentas"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".reporte"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".dialogos.dialogProducto"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".productos"
            tools:ignore="LockedOrientationActivity" />
        <activity
            android:name=".itemsAdapter"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".MainActivity"
            tools:ignore="LockedOrientationActivity"/>
    </application>

</manifest>